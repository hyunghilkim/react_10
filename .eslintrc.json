{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "react-app",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "semi": ["error", "always"]
  }
}
